@model LanguageDetailViewModel
@{
    ViewData["Title"] = "Employee Language Details";
    var employees = ViewData["Employees"] as IEnumerable<SelectListItem>;
    var responseMessage = TempData["Message"] == null ? string.Empty : TempData["Message"].ToString();
}
<h3>Update Employee Language Details</h3>
<hr style="padding: 0; border-color: blue;">
@if (!string.IsNullOrWhiteSpace(responseMessage))
{
    <div class="alert alert-info alert-dismissible" role="alert">
        @Html.Raw(responseMessage)
    </div>
}

    <div class="panel-body">
        <form asp-action="details" class="form-horizontal" method="post" role="form">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="All" class="alert alert-danger"></div>
            <br>
            <div class="panel-group">
                <div class="panel panel-primary">
                    <div class="panel-heading">Language Details</div>
                    <div class="panel-body">
                        <br>
                        <div class="form-group">
                            <label asp-for="EmployeeId" class="control-label col-xs-4"></label>
                            <div class="col-xs-4">
                                <select class="form-control" asp-for="EmployeeId" asp-items=@employees></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="WrittenProficiency" class="control-label col-xs-4"></label>
                            <div class="col-xs-4">
                                <input type="text" class="form-control" asp-for="WrittenProficiency" autocomplete="off" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="SpeechProficiency" class="control-label col-xs-4"></label>
                            <div class="col-xs-4">
                                <input type="text" class="form-control" asp-for="SpeechProficiency" autocomplete="off" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="ReadProficiency" class="control-label col-xs-4"></label>
                            <div class="col-xs-4">
                                <input type="text" class="form-control" asp-for="ReadProficiency" autocomplete="off" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-offset-4 col-xs-10">
                                @if (User.Identity.IsAuthenticated && User.IsInRole("ACL-HRCentralDatabase-Admins"))
                                {
                                    <input type="submit" class="btn btn-primary" value="Save" />
                                }
                                    <a asp-action="index" class="btn btn-default">&laquo;&nbsp;&nbsp;Back to list</a>
                                </div>
                        </div>
                        </div>
                    </div>
                </div>
        </form>
    </div>

@section Scripts{
    <script>
     $('#collapseOne').removeClass('in');
                                $('#collapseTwo').removeClass('in');
                                $('#collapseThree').removeClass('in');
        $('#collapseFour').removeClass('in');
        $('#collapseFive').removeClass('in');
         $('#collapseSix').removeClass('in');

        $('#collapseOne').addClass('in');
    </script>
}





