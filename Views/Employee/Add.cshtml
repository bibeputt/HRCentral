@model NewEmployeeViewModel

@{

    ViewData["Title"] = "Add Employee Details";

    var nationalitiesSelectList = ViewData["NationalitySelectList"] as IEnumerable<SelectListItem>;
    var managersSelectList = ViewData["ManagerSelectList"] as IEnumerable<SelectListItem>;


    var districtsSelectList = ViewData["DistrictSelectList"] as IEnumerable<SelectListItem>;
    var banksSelectList = ViewData["BankSelectList"] as IEnumerable<SelectListItem>;
    var departmentList = ViewData["DepartmentSelectList"] as IEnumerable<SelectListItem>;
    //var relationshipList = ViewData["RelationshipSelectList"] as IEnumerable<SelectListItem>;
    var responseMessage = TempData["Message"] == null ? string.Empty : TempData["Message"].ToString();
}
<h3>Add Employee BioData</h3>
<hr style="padding: 0; border-color: blue;">
@if (!string.IsNullOrWhiteSpace(responseMessage))
{
    <div class="alert alert-info alert-dismissible" role="alert">
        @Html.Raw(responseMessage)
    </div>
}
<div class="well well-sm">
    <div class="panel-body">
        <form asp-action="add" class="form-horizontal" method="post" role="form" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="alert alert-danger"></div>

            <br>
            <div class="panel-group" id="biodata">
                <div class="panel panel-primary">
                    <div class="panel-heading">Employee BioData Details</div>
                    <div class="panel-body">
                        <br>
                        <div class="form-group">
                            <label class="control-label col-xs-2" asp-for="Salutation"></label>
                            <div class="col-xs-4">
                                <select class="form-control" asp-for="Salutation" required>
                                    <option> --- Select Employee Salutation ---</option>
                                    <option value="Mr.">Mr.</option>
                                    <option value="Ms.">Ms.</option>
                                    <option value="Mrs.">Mrs.</option>

                                </select>
                                <span asp-validation-for="Salutation" class="text-danger"></span>
                            </div>
                            <label class="control-label col-xs-2" asp-for="FirstName"></label>
                            <div class="col-xs-4">
                                <input type="text" class="form-control" placeholder="Employee FirstName" asp-for="FirstName" required autocomplete="off" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-xs-2" asp-for="LastName"></label>
                            <div class="col-xs-4">
                                <input type="text" class="form-control" placeholder="Employee LastName" asp-for="LastName" required autocomplete="off" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <label class="control-label col-xs-2" asp-for="MaidenName"></label>
                            <div class="col-xs-4">
                                <input type="text" class="form-control" placeholder="Employee Maiden name" asp-for="MaidenName" autocomplete="off" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="DateOfBirth" class="control-label col-xs-2"></label>
                            <div class="col-xs-4">
                                <div class="input-group date">
                                    <input asp-for="DateOfBirth" type="text" class="form-control" placeholder="Employee Date of Birth" onkeypress="return false;" autocomplete="off" required id="datetimepicker" />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                </div>
                            </div>
                            <label asp-for="Address" class="control-label col-xs-2"></label>
                            <div class="col-xs-4">
                                <input asp-for="Address" type="text" class="form-control" placeholder="Employee Address " required autocomplete="off" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-xs-2" asp-for="MiddleName"></label>
                            <div class="col-xs-4">
                                <input type="text" class="form-control" placeholder="Employee Middle name" asp-for="MiddleName" autocomplete="off" />
                            </div>
                            <label class="control-label col-xs-2">Passport Image</label>
                            <div class="col-xs-4 fileupload-container">
                                <div class="input-group">

                                    <input type="file" class="form-control" asp-for="Img" accept=".jpeg,.jpg" required>

                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-paperclip"></span>
                                    </span>
                                    <span asp-validation-for="Img" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">

                            <label asp-for="DistrictBirthId" class="control-label col-xs-2"></label>
                            <div class="col-xs-4">
                                <select asp-for="DistrictBirthId" class="form-control" asp-items="@districtsSelectList" required>
                                    <option>--- Select District ---</option>
                                </select>
                                <span asp-validation-for="DistrictBirthId" class="text-danger"></span>
                            </div>
                            <label asp-for="NationalityId" class="control-label col-xs-2"></label>
                            <div class="col-xs-4">
                                <select asp-for="NationalityId" class="form-control" asp-items="@nationalitiesSelectList" required>
                                    <option>--- Select Nationality ---</option>
                                </select>
                                <span asp-validation-for="NationalityId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="DistrictResidenceId" class="control-label col-xs-2"></label>
                            <div class="col-xs-4">
                                <select asp-for="DistrictResidenceId" class="form-control" asp-items="@districtsSelectList" required>
                                    <option>--- Select District ---</option>
                                </select>
                                <span asp-validation-for="DistrictResidenceId" class="text-danger"></span>
                            </div>
                            <label asp-for="Gender" class="control-label col-xs-2"></label>
                            <div class="col-xs-4">
                                <select asp-for="Gender" class="form-control" required id="genderId">
                                    <option>--- Select ---</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="form-group">
                            <label asp-for="Religion" class="control-label col-xs-2"></label>
                            <div class="col-xs-4">
                                <select asp-for="Religion" class="form-control" required id="ReligionSelect">
                                    <option>--- Select Religion ---</option>
                                    <option value="Christian">Christian</option>
                                    <option value="Muslems">Muslims</option>
                                    <option value="Others">Others</option>
                                </select>
                                <br>
                                <input type="text" class="form-control" asp-for="OtherReligion" autocomplete="off" placeholder="Other Religion" id="otherreligion" />
                                <span asp-validation-for="Religion" class="text-danger"></span>
                            </div>
                            <label asp-for="MaritalStatus" class="control-label col-xs-2"></label>
                            <div class="col-xs-4">
                                <select asp-for="MaritalStatus" class="form-control" required id="MaritalStatus">
                                    <option>--- Select Marital Status ---</option>
                                    <option value="Single">Single</option>
                                    <option value="Married">Married</option>
                                    <option value="Separated">Separated</option>
                                    <option value="Divorced">Divorced</option>
                                    <option value="Widowed">Widowed</option>
                                    <option value="Others">Others</option>
                                </select>
                                <br>
                                <input type="text" class="form-control" asp-for="MaritalStatusOthers" autocomplete="off" placeholder="Other Marital Status" id="otherMarital" />
                                <span asp-validation-for="MaritalStatus" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-offset-4 col-xs-10">
                                <input type="submit" class="btn btn-primary" value="Next >>" id="btnbio" />
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <div class="panel-group" id="contact">
                <div class="panel panel-primary">
                    <div class="panel-heading">Employee Contact Details</div>
                    <div class="panel-body">
                        <br>
                        <div class="form-group">
                            <label class="control-label col-xs-4">Utl Number</label>
                            <div class="col-xs-4">
                                <input type="text" class="form-control" asp-for="PersonalMobileNumber" placeholder="Personal mobile number" required autocomplete="off" />
                                <span asp-validation-for="PersonalMobileNumber" class="text-danger"></span>
                            </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-4">Extension</label>
                                <div class="col-xs-4">
                                    <input type="text" class="form-control" asp-for="WorkMobileNumber" placeholder="Employee work mobile number" autocomplete="off" />
                                    <span asp-validation-for="WorkMobileNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">

                                <label class="control-label col-xs-4">Secondary Number</label>
                                <div class="col-xs-4">
                                    <input type="text" class="form-control" asp-for="AlternativeMobileNumber" placeholder="Employee Alternative mobile number" required autocomplete="off" />
                                    <span asp-validation-for="AlternativeMobileNumber" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="form-group">
                                <div class="col-xs-offset-4 col-xs-10">
                                    <input type="submit" class="btn btn-primary" value="Next >>" id="btncontact" />
                                    <input type="submit" class="btn btn-success" value="<< Prev" id="btncontact2" />
                                </div>
                            </div>
                        </div>
                </div>
            </div>

            <div class="panel-group" id="spousedata">
                <div class="panel panel-primary">
                    <div class="panel-heading">Spouse Data Details</div>
                    <div class="panel-body">
                        <br>
                        <div class="form-group">
                            <label asp-for="SpouseName" class="control-label col-xs-4"></label>
                            <div class="col-xs-4">
                                <input asp-for="SpouseName" type="text" class="form-control" placeholder="Employee Spouse Name" autocomplete="off" />
                            </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="SpouseDateOfBirth" class="control-label col-xs-4"></label>
                                <div class="col-xs-4">
                                    <div class="input-group date">
                                        <input asp-for="SpouseDateOfBirth" type="text" class="form-control" placeholder="Employee Spouse Date Of Birth" autocomplete="off" onkeypress="return false;" id="datetimepicker1" />
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="SpouseContactAddress" class="control-label col-xs-4"></label>
                                <div class="col-xs-4">
                                    <input asp-for="SpouseContactAddress" type="text" class="form-control" placeholder="Employee Spouse Contact Address" autocomplete="off" />
                                </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="SpouseTelephone" class="control-label col-xs-4"></label>
                                    <div class="col-xs-4">
                                        <input asp-for="SpouseTelephone" type="text" class="form-control" placeholder="Employee Spouse Phone Numbers" autocomplete="off" />

                                    </div>
                                </div>
                            <div class="form-group">
                                <div class="col-xs-offset-4 col-xs-10">
                                    <input type="submit" class="btn btn-primary" value="Next >>" id="btnspouse" />
                                    <input type="submit" class="btn btn-success" value="<< Prev" id="btnspouse2" />
                                </div>
                            </div>
                        </div>
                </div>
            </div>

            <div class="panel-group" id="contactResidence">
                <div class="panel panel-primary">
                    <div class="panel-heading">Contact Person At Residence</div>
                    <div class="panel-body">
                        <br>
                        <div class="form-group">
                            <label asp-for="ContactPerson" class="control-label col-xs-4"></label>
                            <div class="col-xs-4">
                                <input type="text" class="form-control" asp-for="ContactPerson" placeholder="Contact Person Name" required autocomplete="off" />
                            </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="ContactPersonTelephone" class="control-label col-xs-4"></label>
                                <div class="col-xs-4">
                                    <input type="text" class="form-control" asp-for="ContactPersonTelephone" placeholder="Contact Person Telephone" required autocomplete="off" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-offset-4 col-xs-10">
                                    <input type="submit" class="btn btn-primary" value="Next >>" id="btncontactperson" />
                                    <input type="submit" class="btn btn-success" value="<< Prev" id="btncontactperson2" />
                                </div>
                            </div>
                        </div>
                </div>
            </div>

            <div class="panel-group" id="jobdata">
                <div class="panel panel-primary">
                    <div class="panel-heading">Job Data Details</div>
                    <div class="panel-body">
                        <br>
                        <div class="form-group">
                            <label asp-for="JobTitle" class="control-label col-xs-4"></label>
                            <div class="col-xs-4">
                                <input asp-for="JobTitle" type="text" class="form-control" placeholder="Employee Job Title " required autocomplete="off" />
                            </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="SupervisorId" class="control-label col-xs-4"></label>
                                <div class="col-xs-4">
                                    <select asp-for="SupervisorId" class="form-control" asp-items="@managersSelectList" required>
                                        <option></option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="DepartmentId" class="control-label col-xs-4"></label>
                                <div class="col-xs-4">
                                    <select asp-for="DepartmentId" class="form-control" asp-items="@departmentList" required>
                                        <option>--- Select Department ---</option>
                                    </select>
                                </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IsActive" class="control-label col-xs-4"></label>
                                    <div class="col-xs-4">
                                        <select class="form-control" asp-for="IsActive" required>
                                            <option> --- Select Employee Status ---</option>
                                            <option value="True">True</option>
                                            <option value="False">False</option>

                                        </select>

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PFNumber" class="control-label col-xs-4"></label>
                                    <div class="col-xs-4">
                                        <input asp-for="PFNumber" type="text" class="form-control" placeholder="Employee Personal File Number" required autocomplete="off" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="DateOfJoin" class="control-label col-xs-4"></label>
                                    <div class="col-xs-4">
                                        <div class="input-group date">
                                            <input asp-for="DateOfJoin" type="text" class="form-control" placeholder="Employee Date of Joining" onkeypress="return false;" autocomplete="off" required id="datetimepicker3" />
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                            <span asp-validation-for="DateOfJoin" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-offset-4 col-xs-10">
                                        <input type="submit" class="btn btn-primary" value="Next >>" id="btnjob" />
                                        <input type="submit" class="btn btn-success" value="<< Prev" id="btnjob2" />
                                    </div>
                                </div>
                            </div>
                </div>
            </div>

            <div class="panel-group" id="employeedata">
                <div class="panel panel-primary">
                    <div class="panel-heading">Employee Essentials</div>
                    <div class="panel-body">
                        <br>
                        <div class="form-group">
                            <label asp-for="TINNumber" class="control-label col-xs-4"></label>
                            <div class="col-xs-4">
                                <input asp-for="TINNumber" type="text" class="form-control" placeholder="Employee TIN Number" autocomplete="off" required />
                            </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="NSSFNumber" class="control-label col-xs-4"></label>
                                <div class="col-xs-4">
                                    <input asp-for="NSSFNumber" type="text" class="form-control" placeholder="Employee NSSF Number" autocomplete="off" required />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="NINNumber" class="control-label col-xs-4"></label>
                                <div class="col-xs-4">
                                    <input asp-for="NINNumber" type="text" class="form-control" placeholder="Employee NIN Number" autocomplete="off" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-offset-4 col-xs-10">
                                    <input type="submit" class="btn btn-primary" value="Next >>" id="btnemployee" />
                                    <input type="submit" class="btn btn-success" value="<< Prev" id="btnemployee2" />
                                </div>
                            </div>
                        </div>
                </div>
            </div>

            <div class="panel-group" id="bankdata">
                <div class="panel panel-primary">
                    <div class="panel-heading">Employee Bank Details</div>
                    <div class="panel-body">
                        <br>
                        <div class="form-group">
                            <label asp-for="BankId" class="control-label col-xs-4"></label>
                            <div class="col-xs-4">
                                <select class="form-control" asp-for="BankId" asp-items=@banksSelectList required>
                                    <option>--- Select Bank ---</option>
                                </select>
                            </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="BankBranch" class="control-label col-xs-4"></label>
                                <div class="col-xs-4">
                                    <input type="text" class="form-control" asp-for="BankBranch" placeholder="BankBranch Name" required autocomplete="off" />
                                </div>
                            </div>
                            <div class="form-group">

                                <label asp-for="BankAccountNumber" class="control-label col-xs-4"></label>
                                <div class="col-xs-4">
                                    <input type="text" class="form-control" asp-for="BankAccountNumber" placeholder="Employee Account Number" required autocomplete="off" />
                                </div>

                            </div>
                            <div class="form-group">
                                <div class="col-xs-offset-4 col-xs-10">
                                    <input type="submit" class="btn btn-success" value="<< Prev" id="btnbeneficiary" />
                                </div>
                            </div>
                        </div>
                </div>
            </div>

