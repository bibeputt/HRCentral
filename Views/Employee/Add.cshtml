        $('#collapseFive').removeClass('in');
         $('#collapseSix').removeClass('in');

        $('#collapseTwo').addClass('in');
        });

    </script>
    <script type="text/javascript">
        $(function () {

            $('#otherreligion').hide();
            $('#ReligionSelect').change(function () {
                var value = $(this).val();
                if (value == 'Others') {

                    $('#otherreligion').show();
                } else {

                    $('#otherreligion').hide();
                }
            });
        });
    </script>
    <script type="text/javascript">
        $(function () {

            $('#otherMarital').hide();
            $('#MaritalStatus').change(function () {
                var value = $(this).val();
                if (value == 'Others') {

                    $('#otherMarital').show();
                } else {

                    $('#otherMarital').hide();
                }
            });
        });

    </script>
    <script type="text/javascript">
        $("#admin").hide();
        $("#contact").hide();
        $("#spousedata").hide();
        $("#contactResidence").hide();
        $("#jobdata").hide();
        $("#employeedata").hide();
        $("#bankdata").hide();
       // $("#benificiarydata").hide();
        //$("#benificiarydata").hide();
        $("#btnbio").click(function () {
            //alert("button"); // Remove this line if it worked
            $("#biodata").hide();
            $("#contact").show();
        });
        $("#btncontact").click(function(){
            $("#contact").hide();
            $("#spousedata").show();
        });
        $("#btnspouse").click(function () {
            $("#spousedata").hide();
            $("#contactResidence").show();
        });
        $("#btncontactperson").click(function () {
            $("#contactResidence").hide();
            $("#jobdata").show();
        });
        $("#btnjob").click(function () {
            $("#jobdata").hide();
            $("#employeedata").show();
        });
        $("#btnemployee").click(function () {
            $("#employeedata").hide();
            $("#bankdata").show();
            $("#btnsave").prop('disabled', false);
        });
        $("#btnbank").click(function () {
            $("#bankdata").hide();
            $("#benificiarydata").show();
            
        });
        $("#btncontact2").click(function () {
            $("#contact").hide();
            $("#biodata").show();
        });
        $("#btnspouse2").click(function () {
            $("#contact").show();
            $("#spousedata").hide();
        });
        $("#btncontactperson2").click(function () {
            $("#spousedata").show();
            $("#contactResidence").hide();
        });
        $("#btnjob2").click(function () {
            $("#contactResidence").show();
            $("#jobdata").hide();
        });
        $("#btnemployee2").click(function () {
            $("#jobdata").show();
            $("#employeedata").hide();
        });
        $("#btnbank2").click(function () {
            $("#employeedata").show();
            $("#bankdata").hide();
            //$("#btnsave").prop('disabled', false);
        });
    $("#btnbeneficiary").click(function () {
              $("#bankdata").hide();
            $("#employeedata").show();
            $("#btnsave").prop('disabled', true);
        });
        
    </script>
   
}
