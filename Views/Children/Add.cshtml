@model NewChildrenViewModel
@{
    ViewData["Title"] = "Add Employee Child";
    var employeeSelectList = ViewData["Employees"] as IEnumerable<SelectListItem>;
    var birthorderSelectList = ViewData["BirthOrders"] as IEnumerable<SelectListItem>;
    var responseMessage = TempData["Message"] == null ? string.Empty : TempData["Message"].ToString();
}
<h3>Add Children</h3>
<hr style="padding: 0; border-color: blue;">
@if (!string.IsNullOrWhiteSpace(responseMessage))
{
    <div class="alert alert-info alert-dismissible" role="alert">
        @Html.Raw(responseMessage)
    </div>
}

<div class="panel-body">
    <form asp-action="add" class="form-horizontal" method="post" role="form" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="alert alert-danger"></div>
        <br>
        <div class="panel-group">
            <div class="panel panel-success">
                <div class="panel-heading">Child Details</div>
                <div class="panel-body">
                    <br>
                    <div class="form-group">
                        <label asp-for="EmployeeId" class="control-label col-xs-4"></label>
                        <div class="col-xs-4">
                            <select asp-for="EmployeeId" class="form-control" asp-items="@employeeSelectList" required>
                                <option>--- Select Employee ---</option>
                            </select>
                            <span asp-validation-for="EmployeeId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label col-xs-4"></label>
                        <div class="col-xs-4">
                            <input type="text" class="form-control" asp-for="Name" placeholder="Child Names" required autocomplete="off" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="BirthOrderId" class="control-label col-xs-4"></label>
                        <div class="col-xs-4">
                            <select asp-for="BirthOrderId" class="form-control" asp-items="@birthorderSelectList" required>
                                <option>--- Select BirthOrder ---</option>
                            </select>
                            <span asp-validation-for="BirthOrderId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="BirthDate" class="control-label col-xs-4"></label>
                        <div class="col-xs-4">
                            <div class="input-group date">
                                <input type="text" class="form-control" asp-for="BirthDate" onkeypress="return false;" placeholder="Child's Birth date" required autocomplete="off" id="datetimepicker" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                                <span asp-validation-for="BirthDate" class="text-danger"></span>
                            </div>
                            </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Gender" class="control-label col-xs-4"></label>
                        <div class="col-xs-4">
                            <select class="form-control" data-val="true" data-val-required="The child gender field is required." asp-for="Gender" required id="GenderID">
                                <option> --- Select Child Gender ---</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>

                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                    </div>
                    
                    @*<div class="form-group">
                        <label class="control-label col-xs-2">Birth Certificate</label>
                        <div class="col-xs-4 fileupload-container">
                            <div class="input-group">
                                <input type="file" class="form-control" asp-for="BirthImg" accept=".pdf">
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-paperclip"></span>
                                </span>
                                <span asp-validation-for="BirthImg" class="text-danger"></span>
                            </div>
                        </div>
                        </div>*@
                        <div class="form-group">
                            <div class="col-xs-offset-4 col-xs-10">
                                <input type="submit" class="btn btn-primary" value="Save" />
                                <a asp-action="index" class="btn btn-default">&laquo;&nbsp;&nbsp;Back to list</a>
                            </div>
                        </div>
                    </div>
                </div>
        </div>

    </form>

</div>

@section Scripts{
    <link href="~/lib/datetimepicker/build/jquery.datetimepicker.min.css" rel="stylesheet" />
    <script src="~/lib/datetimepicker/build/jquery.datetimepicker.full.js"></script>
    <script>
        $('#collapseOne').removeClass('in');
                                $('#collapseTwo').removeClass('in');
                                $('#collapseThree').removeClass('in');
        $('#collapseFour').removeClass('in');
        $('#collapseFive').removeClass('in');
         $('#collapseSix').removeClass('in');

        $('#collapseTwo').addClass('in');
    </script>
    <script>
        $(function () {
            $('#datetimepicker').datetimepicker({
                format: 'Y-m-d',
                timepicker: false
            });
        });
    </script>
        
}

