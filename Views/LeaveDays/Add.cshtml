
@model NewLeaveDayViewModel
@{
    ViewData["Title"] = "Add Leave Days";
    var responseMessage = TempData["Message"] == null ? string.Empty : TempData["Message"].ToString();
}
<h3>Add Leave Days</h3>
<hr style="padding: 0; border-color: blue;">
@if (!string.IsNullOrWhiteSpace(responseMessage))
{
    <div class="alert alert-info alert-dismissible" role="alert">
        @Html.Raw(responseMessage)
    </div>
}
<div class="panel-body">
    <form asp-action="add" class="form-horizontal" method="post" role="form">
        <div asp-validation-summary="All" class="alert alert-danger"></div>
        <br>
        <div class="panel-group">
            <div class="panel panel-success">
                <div class="panel-heading">Leave Days Details</div>
                <div class="panel-body">
                    <br>
                    <div class="form-group">
                        <label class="control-label col-xs-4" asp-for="Title"></label>
                        <div class="col-xs-4">
                            <input asp-for="Title" type="text" class="form-control" placeholder="Leave Title" required autocomplete="off" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-xs-4" asp-for="Days"></label>
                        <div class="col-xs-4">
                            <input asp-for="Days" type="text" class="form-control" name="Days" placeholder="Leave days" id="Days" data-val="true" data-val-required="Name field is required." required autocomplete="off" />
                            <span asp-validation-for="Days" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-offset-4 col-xs-10">
                            <input type="submit" class="btn btn-primary" value="Save" />
                            <a asp-action="index" class="btn btn-default">&laquo;&nbsp;&nbsp;Back to list</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </form>
</div>


@section Scripts{
    <script>
        $('#collapseOne').removeClass('in');
        $('#collapseTwo').removeClass('in');
        $('#collapseThree').removeClass('in');
        $('#collapseFour').removeClass('in');

       $('#collapseThree').addClass('in');
    </script>
}


