@model BeneficiaryDetailViewModel
@{
    ViewData["Title"] = "Beneficiary Details";
    var employeeSelectList = ViewData["Employees"] as IEnumerable<SelectListItem>;
    var relationshipList = ViewData["RelationShips"] as IEnumerable<SelectListItem>;
    var responseMessage = TempData["Message"] == null ? string.Empty : TempData["Message"].ToString();
}
<h3>Update Beneficiary Details</h3>
<hr style="padding: 0; border-color: blue;">
@if (!string.IsNullOrWhiteSpace(responseMessage))
{
    <div class="alert alert-info alert-dismissible" role="alert">
        @Html.Raw(responseMessage)
    </div>
}
<div class="panel panel-success">
    <div class="panel-heading">Beneficiary Details</div>
    <div class="panel-body">
        <form asp-action="details" class="form-horizontal" method="post" role="form">
            <div asp-validation-summary="All" class="alert alert-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="well well-sm">
                <br>
                <div class="form-group">
                    <label asp-for="BeneficiaryName" class="control-label col-xs-4"></label>
                    <div class="col-xs-4">
                        <input type="text" class="form-control" asp-for="BeneficiaryName" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-xs-4">Address</label>
                    <div class="col-xs-4">
                        <textarea rows="1" class="form-control" asp-for="BeneficiaryContact"></textarea>

                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="EmployeeID" class="control-label col-xs-4"></label>
                    <div class="col-xs-4">
                        <select asp-for="EmployeeID" class="form-control" asp-items="@employeeSelectList">
                            <option>--- Select Employee ---</option>
                        </select>

                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="RelationshipId" class="control-label col-xs-4"></label>
                    <div class="col-xs-4">
                        <select class="form-control" asp-for="RelationshipId" asp-items=@relationshipList>
                            <option>--- Select Relationship ---</option>
                        </select>
                    </div>

                </div>
                <div class="form-group">
                    <div class="col-xs-offset-4 col-xs-10">
                        @if (User.Identity.IsAuthenticated && User.IsInRole("ACL-HRCentralDatabase-Admins"))
                        {
                            <input type="submit" class="btn btn-primary" value="Save"/>
                            }
                            <a asp-action="index" class="btn btn-default">&laquo;&nbsp;&nbsp;Back to list</a>
                        </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <script>
        $('#collapseOne').removeClass('in');
                                $('#collapseTwo').removeClass('in');
                                $('#collapseThree').removeClass('in');
        $('#collapseFour').removeClass('in');
        $('#collapseFive').removeClass('in');
         $('#collapseSix').removeClass('in');

        $('#collapseTwo').addClass('in');
    </script>


}
