@model NewEducationViewModel
@{
    ViewData["Title"] = "Add Education Details";
    var responseMessage = TempData["Message"] == null ? string.Empty : TempData["Message"].ToString();
    var employees = ViewData["Employees"] as IEnumerable<SelectListItem>;
    var qualifications = ViewData["Qualifications"] as IEnumerable<SelectListItem>;

}
<h3>Add Education</h3>
<hr style="padding: 0; border-color: blue;">
@if (!string.IsNullOrWhiteSpace(responseMessage))
{
    <div class="alert alert-info alert-dismissible" role="alert">
        @Html.Raw(responseMessage)
    </div>
}

<div class="panel-body">
    @*<form asp-action="add" class="form-horizontal" method="post" role="form" enctype="multipart/form-data">*@
        <form asp-action="add" class="form-horizontal" method="post" role="form">
            <div asp-validation-summary="All" class="alert alert-danger"></div>
            <br>
            <div class="panel-group">
                <div class="panel panel-success">
                    <div class="panel-heading">Employee Education Details</div>
                    <div class="panel-body">
                        <br>
                        <div class="form-group">
                            <label class="control-label col-xs-4" asp-for="EmployeeId"></label>
                            <div class="col-xs-4">
                                <select class="form-control" asp-for="EmployeeId" asp-items=@employees required>
                                    <option>--- Select Employee ---</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-xs-4" asp-for="QualificationId"></label>
                            <div class="col-xs-4">
                                <select class="form-control" asp-for="QualificationId" asp-items=@qualifications required>
                                    <option>--- Select Qualification ---</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-xs-4" asp-for="QualificationTitle"></label>
                            <div class="col-xs-4">
                                <input type="text" class="form-control" asp-for="QualificationTitle" placeholder="Name of qualification" required autocomplete="off" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-xs-4" asp-for="Status"></label>
                            <div class="col-xs-4">
                                <select class="form-control" asp-for="Status" required>
                                    <option>--- Select Education Status ---</option>
                                    <option value="True">True</option>
                                    <option value="False">False</option>

                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-xs-4" asp-for="Institution"></label>
                            <div class="col-xs-4">
                                <input type="text" class="form-control" asp-for="Institution" placeholder="Institution" required autocomplete="off" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-xs-4" asp-for="Begin"></label>
                            <div class="col-xs-4">

                                <input type="text" class="form-control" asp-for="Begin" placeholder="Start Year" required autocomplete="off" />

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-xs-4" asp-for="End"></label>
                            <div class="col-xs-4">

                                <input type="text" class="form-control" asp-for="End" placeholder="End Year" required />

                            </div>
                        </div>
